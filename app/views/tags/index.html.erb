<article class="module width_3_quarter">
    <header><h3>タグ一覧</h3></header>

<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>
    <table class="tablesorter" cellspacing="0">
        <thead>
            <tr>
                <th>ID</th>
                <th class="tag_name">タグ名</th>
                <th>記事</th>
                <th>更新日時</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
<%= render :partial => 'tag', :collection => @tags %>
        </tbody>
    </table>
</article>

<article class="module width_quarter">
    <header><h3>タグの追加</h3></header>
<%= form_for(@tag, :remote => true) do |f| %>
<% if @tag.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

    <ul>
        <% @tag.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="module_content">
    <fieldset>
        <%= f.label :name, 'タグ名' %>
        <%= f.text_field :name, :class => 'admin_form_name' %>
    </fieldset>
</div>

<footer>
    <div class="submit_link">
        <%= f.submit :追加, :class => 'form_submit', :confirm => '追加してよいですか？' %>
        <input type="reset" class="cancel" value="リセット" />
    </div>
</footer>
<% end %>
</article>
